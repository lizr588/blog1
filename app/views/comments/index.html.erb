<p id="notice"><%= notice %></p>

<h1>Comments</h1>

  <div class="panel panel-default">
    <% @comments.each do |comment|%>

        <div class="panel-body"><%= comment.author %></div>
        <div class="panel-body"><%= comment.comment_entry %></div>

        <div class="panel-footer">
        <button type="button" class="btn btn-primary"><%= link_to 'Show', comment %></button>
        <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_comment_path(comment) %></button>
        <button type="button" class="btn btn-danger"><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>

    <% end %>
  </div>

<br>

<%= link_to 'New Comment', new_comment_path %>
